#!/usr/bin/perl

######################################################################
#
# A sample PseudoPod to DocBook converter script that uses
# Pod::PseudoPod::DocBook.
#
# usage:
#
# $ ppod2html filename1.pod filename2.pod
#
# Will produce one html file for each pod file passed in.
#
#   filename1.html
#   filename2.html
#
######################################################################

use strict;
use lib 'lib';
use Pod::PseudoPod::DocBook;
use File::Basename;

foreach my $file (@ARGV) {
	my $parser = Pod::PseudoPod::DocBook->new();

	# DocBook output goes to the current working 
	# directory not the source directory.
	my $outfile = fileparse( $file, qr{\..*} ) . '.xml';
	
	open DBOUT, ">$outfile" or die "Can't write to $outfile: $!";
	$parser->output_fh(*DBOUT);

	$parser->no_errata_section(1); # don't put errors in doc output
	$parser->complain_stderr(1);   # output errors on STDERR instead

	if (-e $file) {
		$parser->parse_file($file);
	} else {
		die "Unable to open file\n";
	}
	close DBOUT;
}

exit;
